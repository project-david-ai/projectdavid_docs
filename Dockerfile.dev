# ─── Dev‑only Dockerfile ──────────────────────────
FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci --no-audit --progress=false

ENV HOST=0.0.0.0 \
    CHOKIDAR_USEPOLLING=true \
    WATCHPACK_POLLING=true \
    VITE_DEV_SERVER_FORCE_POLL=true

EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host"]